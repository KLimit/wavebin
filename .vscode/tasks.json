{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Package",
            "type": "shell",
            "command": "hatch build",
            "problemMatcher": []
        },
        {
            "label": "Clean Build Artifacts",
            "type": "shell",
            "command": "hatch clean",
            "problemMatcher": []
        },
        {
            "label": "Build Package (PyInstaller)",
            "type": "shell",
            "command": "hatch run pyinstaller --clean wavebin/wavebin.spec",
            "problemMatcher": []
        },
        {
            "label": "Create Virtual Environment",
            "type": "shell",
            "command": "hatch env create",
            "problemMatcher": []
        },
        {
            "label": "Delete Virtual Environment",
            "type": "shell",
            "command": "hatch env remove",
            "problemMatcher": []
        },
        {
            "label": "Run wavebin",
            "type": "shell",
            "command": "hatch run wavebin -v",
            "problemMatcher": []
        },
        {
            "label": "Run wavebin (reset configuration)",
            "type": "shell",
            "command": "hatch run wavebin -v -r",
            "problemMatcher": []
        },
        {
            "label": "Run wavebin (single waveform)",
            "type": "shell",
            "command": "hatch run wavebin -v -i \"${workspaceFolder}\\samples\\Keysight\\Keysight_DSOX1102G_1CH_1MSPS_2Kpts_SINGLE.bin\"",
            "problemMatcher": []
        },
        {
            "label": "Run wavebin (dual waveform)",
            "type": "shell",
            "command": "hatch run wavebin -v -i \"${workspaceFolder}\\samples\\Keysight\\Keysight_DSOX1102G_2CH_2GSPS_4Kpts_DUAL.bin\"",
            "problemMatcher": []
        },
        {
            "label": "Run wavebin (quad waveform)",
            "type": "shell",
            "command": "hatch run wavebin -v -i \"${workspaceFolder}\\samples\\Agilent\\Agilent_MSOX4154A_4CH_1.25GSPS_2Mpts.bin\"",
            "problemMatcher": []
        },
        {
            "label": "Run wavebin (UART waveform)",
            "type": "shell",
            "command": "hatch run wavebin -v -i \"${workspaceFolder}\\samples\\Keysight\\Keysight_DSOX1102G_1CH_20MSPS_1Mpts_UART.bin\"",
            "problemMatcher": []
        },
        {
            "label": "pip show",
            "type": "shell",
            "command": "hatch run pip show wavebin",
            "problemMatcher": []
        }
    ]
}
